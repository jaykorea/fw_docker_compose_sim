  <joint name="wheel_left_joint" type="continuous">
    <parent link="base_link"/>
    <child link="wheel_left_link"/>
    <origin xyz="0.0 0.205 0.0" rpy="-1.57 0 0"/>
    <axis xyz="0 0 1"/>
  </joint>

  <link name="wheel_left_link">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <cylinder length="0.034" radius="0.085"/>
      </geometry>
      <material name="blue"/>
    </visual>

    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <cylinder length="0.034" radius="0.085"/>
      </geometry>
    </collision>

    <inertial>
      <origin xyz="0 0 0" />
      <mass value="3.75" />
      <inertia ixx="${3.75*(3*0.085*0.085+0.034*0.034)/12}" ixy="0" ixz="0"
               iyy="${3.75*(3*0.085*0.085+0.034*0.034)/12}" iyz="0"
               izz="${3.75*0.085*0.085/2}" />
      </inertial>
  </link>

  <joint name="wheel_right_joint" type="continuous">
    <parent link="base_link"/>
    <child link="wheel_right_link"/>
    <origin xyz="0.0 -0.205 0.0" rpy="-1.57 0 0"/>
    <axis xyz="0 0 1"/>
  </joint>

  <link name="wheel_right_link">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <cylinder length="0.034" radius="0.085"/>
      </geometry>
      <material name="blue"/>
    </visual>

    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <cylinder length="0.034" radius="0.085"/>
      </geometry>
    </collision>

    <inertial>
      <origin xyz="0 0 0" />
      <mass value="3.75" />
      <inertia ixx="${3.75*(3*0.085*0.085+0.034*0.034)/12}" ixy="0" ixz="0"
               iyy="${3.75*(3*0.085*0.085+0.034*0.034)/12}" iyz="0"
               izz="${3.75*0.085*0.085/2}" />
      </inertial>
  </link>

  <joint name="caster_back_joint_right" type="continuous">
    <parent link="base_link"/>
    <child link="caster_back_joint_right"/>
    <origin xyz="-0.305 -0.145 -0.055" rpy="-1.57 0 0"/>
    <axis xyz="0 0 1"/>
  </joint>

  <link name="caster_back_joint_right">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <sphere radius="0.03"/>
      </geometry>
      <material name="blue"/>
    </visual>

    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <sphere radius="0.03"/>
      </geometry>
    </collision>

    <inertial>
      <origin xyz="0 0 0" />
      <mass value="0.05" />
      <inertia ixx="${2*0.05*0.03*0.03/5}" ixy="0.0" ixz="0.0"
               iyy="${2*0.05*0.03*0.03/5}" iyz="0.0"
               izz="${2*0.05*0.03*0.03/5}" />
    </inertial>
  </link>

  <joint name="caster_back_joint_left" type="continuous">
    <parent link="base_link"/>
    <child link="caster_back_joint_left"/>
    <origin xyz="-0.305 0.145 -0.055" rpy="-1.57 0 0"/>
    <axis xyz="0 0 1"/>
  </joint>

  <link name="caster_back_joint_left">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <sphere radius="0.03"/>
      </geometry>
      <material name="blue"/>
    </visual>

    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <sphere radius="0.03"/>
      </geometry>
    </collision>

    <inertial>
      <origin xyz="0 0 0" />
      <mass value="0.05" />
      <inertia ixx="${2*0.05*0.03*0.03/5}" ixy="0.0" ixz="0.0"
               iyy="${2*0.05*0.03*0.03/5}" iyz="0.0"
               izz="${2*0.05*0.03*0.03/5}" />
    </inertial>
  </link>

